<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".AddDeviceActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/azulPetroleo"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imggtnback"
            android:layout_width="70dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:backgroundTint="@color/azulPetroleo"
            android:clickable="true"
            android:src="@drawable/ic_back" />

        <TextView
            android:layout_width="260dp"
            android:layout_height="wrap_content"
            android:layout_margin="15dp"
            android:text="Crear dispositivo"
            android:textColor="@color/white"
            android:textSize="24dp" />

        <ImageButton
            android:id="@+id/btnAddregister"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/azulMarino"
            android:text="REGISTRAR EQUIPO"
            android:textColor="@color/white"
            android:src="@drawable/ic_save" />
    </LinearLayout>




    <EditText
        android:id="@+id/etaddNombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Nombre"
        android:minHeight="48dp" />
    <EditText
        android:id="@+id/etaddsn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="S/N Numero de serie"
        android:minHeight="48dp" />

    <Spinner
        android:id="@+id/spinnerCompani"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:drawSelectorOnTop="true"
        android:entries="@array/companias"
        android:padding="20dp" />



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal">
        <EditText
            android:id="@+id/etPrecio"
            android:layout_width="100dp"
            android:layout_height="80dp"
            android:text="0.822"
            android:enabled="false"/>

        <Button
            android:id="@+id/aaddbtnPrecio"
            android:layout_width="90dp"
            android:layout_height="30dp"
            android:background="@color/amarilloClaro"
            android:inputType="numberDecimal"
            android:textSize="13dp"
            android:text="Cambiar precio" />
        <TextView
            android:id="@+id/aaddtvMensajeAtencion"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="15dp"
            android:layout_gravity="center"
            android:layout_margin="5dp"
            android:textColor="@color/rojoExtremo"
            android:visibility="gone"
            android:text="ATENCION! Precios de categoria domiciliario  de la gestion 2021.Cambie el precio si esta seguro(a) que su categoria es diferente."/>
    </LinearLayout>

    <EditText
        android:id="@+id/etAddpass"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <EditText
        android:id="@+id/etaddpass2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:hint="Repetir contraseña"
        android:inputType="textPassword"
        android:minHeight="48dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom"
        android:orientation="vertical">

    </LinearLayout>

</LinearLayout>